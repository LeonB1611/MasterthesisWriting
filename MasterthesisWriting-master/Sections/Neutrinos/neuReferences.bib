@Article{nmo_image_source,
AUTHOR = {Antonelli, Vito and Miramonti, Lino and Ranucci, Gioacchino},
TITLE = {Present and Future Contributions of Reactor Experiments to Mass Ordering and Neutrino Oscillation Studies},
